<% layout('layouts/boilerplate') %>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="editlisting">Edit Listing</h2>
            
            <form action="/listings/<%= listing._id %>?_method=PUT" method="POST"  class="row g-3 needs-validation" novalidate>
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" id="title" name="title" value="<%= listing.title %>" 
                           placeholder="e.g., Cozy Beachfront Villa with Ocean Views" required>
                           
                </div>
                
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea class="form-control" id="description" name="description" rows="4" 
                              placeholder="Describe what makes your place special... amenities, nearby attractions, unique features, perfect for couples/families, etc." required><%= listing.description %></textarea>
                </div>
                
                <div class="mb-3">
                    <label for="image" class="form-label">Image URL</label>
                    <input type="text" class="form-control" id="image" name="image" value="<%= listing.image %>" 
                           placeholder="https://example.com/beautiful-property-photo.jpg" required>
                </div>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="price" class="form-label">Price per night (â‚¹)</label>
                            <input type="number" class="form-control" id="price" name="price" value="<%= listing.price %>" 
                                   placeholder="2500" min="1" required>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="country" class="form-label">Country</label>
                            <input type="text" class="form-control" id="country" name="country" value="<%= listing.country %>" 
                                   placeholder="e.g., India, Thailand, France" required>
                        </div>
                    </div>
                </div>
                
                <div class="mb-3">
                    <label for="location" class="form-label">Address</label>
                    <input type="text" class="form-control" id="location" name="location" value="<%= listing.location %>" 
                           placeholder="e.g., Goa Beach, Mumbai Downtown, Manali Hills" required>
                </div>
                
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Update Listing</button>
                    <a href="/listings/<%= listing._id %>" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>