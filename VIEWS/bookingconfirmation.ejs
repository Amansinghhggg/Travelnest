<% layout('layouts/boilerplate') %>
<style>
  .confirmation-container {
    max-width: 800px;
    margin: 40px auto;
    padding: 0 20px;
  }
  
  .confirmation-card {
    background: #fff;
    border-radius: 16px;
    box-shadow: 0 6px 20px rgba(0,0,0,0.08);
    overflow: hidden;
    animation: slideUp 0.6s ease-out;
  }
  
  @keyframes slideUp {
    from { opacity: 0; transform: translateY(30px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  .confirmation-header {
    background: linear-gradient(135deg, #FF5A5F 0%, #FF385C 100%);
    color: white;
    padding: 40px;
    text-align: center;
    position: relative;
  }
  
  .success-icon {
    width: 80px;
    height: 80px;
    background: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 20px;
    color: #FF5A5F;
    font-size: 2.5rem;
    box-shadow: 0 4px 15px rgba(0,0,0,0.2);
    animation: popIn 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275) 0.3s both;
  }
  
  @keyframes popIn {
    from { transform: scale(0); }
    to { transform: scale(1); }
  }
  
  .confirmation-body {
    padding: 40px;
  }
  
  .booking-details {
    margin-top: 30px;
    border: 1px solid #eee;
    border-radius: 12px;
    padding: 25px;
  }
  
  .detail-row {
    display: flex;
    justify-content: space-between;
    margin-bottom: 15px;
    padding-bottom: 15px;
    border-bottom: 1px solid #f0f0f0;
  }
  
  .detail-row:last-child {
    border-bottom: none;
    margin-bottom: 0;
    padding-bottom: 0;
  }
  
  .detail-label {
    color: #717171;
    font-weight: 500;
  }
  
  .detail-value {
    font-weight: 600;
    color: #222;
  }
  
  .listing-preview {
    display: flex;
    gap: 20px;
    margin-bottom: 30px;
    align-items: center;
  }
  
  .listing-thumb {
    width: 100px;
    height: 100px;
    border-radius: 12px;
    object-fit: cover;
  }
  
  .action-buttons {
    display: flex;
    gap: 15px;
    margin-top: 40px;
    justify-content: center;
  }
  
  .btn-home {
    background: #f7f7f7;
    color: #484848;
    border: 1px solid #ddd;
    padding: 12px 30px;
    border-radius: 50px;
    font-weight: 600;
    transition: all 0.3s;
  }
  
  .btn-home:hover {
    background: #e0e0e0;
    transform: translateY(-2px);
  }
  
  .btn-trips {
    background: #FF5A5F;
    color: white;
    padding: 12px 30px;
    border-radius: 50px;
    font-weight: 600;
    border: none;
    transition: all 0.3s;
  }
  
  .btn-trips:hover {
    background: #FF385C;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(255, 90, 95, 0.3);
    color: white;
  }
</style>

<div class="confirmation-container">
  <div class="confirmation-card">
    <div class="confirmation-header">
      <div class="success-icon">
        <i class="fa-solid fa-check"></i>
      </div>
      <h2 class="mb-2">Booking Confirmed!</h2>
      <p class="mb-0" style="opacity: 0.9;">You're all set for your trip.</p>
    </div>
    
    <div class="confirmation-body">
      <div class="listing-preview">
        <img src="<%= listing.image.url %>" alt="<%= listing.title %>" class="listing-thumb">
        <div>
          <h4 class="mb-1"><%= listing.title %></h4>
          <p class="text-muted mb-0"><i class="fa-solid fa-location-dot me-1"></i> <%= listing.location %>, <%= listing.country %></p>
        </div>
      </div>

      <div class="booking-details">
        <h5 class="mb-4">Trip Details</h5>
        
        <div class="detail-row">
          <span class="detail-label">Owner Email</span>
          <span class="detail-value"><%= listing.owner.email %></span>
        </div>
        <div class="detail-row">
          <span class="detail-label">Owner Contact Number</span>
          <span class="detail-value"><%= listing.owner.contactNumber || 'N/A' %></span>
        </div>
        
        <div class="detail-row">
          <span class="detail-label">Dates</span>
          <span class="detail-value">
            <%= new Date(booking.checkin).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %> - 
            <%= new Date(booking.checkout).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %>
          </span>
        </div>
        
        <div class="detail-row">
          <span class="detail-label">Guests</span>
          <span class="detail-value"><%= booking.guests %> <%= booking.guests > 1 ? 'Guests' : 'Guest' %></span>
        </div>
        
        <div class="detail-row">
          <span class="detail-label">Total Price</span>
          <span class="detail-value">â‚¹<%= booking.amount.toLocaleString('en-IN') %></span>
        </div>
        
        <div class="detail-row">
          <span class="detail-label">Duration</span>
          <span class="detail-value"><%= diffDays %> <%= diffDays > 1 ? 'nights' : 'night' %></span>
        </div>
      </div>

      <div class="action-buttons">
        <a href="/listings" class="btn btn-home">Back to Home</a>
        
        <a href="/profile" class="btn btn-trips" style="background: #667eea;">My Bookings</a>
      </div>
    </div>
  </div>
</div>